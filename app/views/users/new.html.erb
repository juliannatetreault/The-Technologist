<div class="heading center">
    <h3>Welcome, technologist!</h3>
    For the lastest byte-sized tech reviews, please create an account:
</div>

<%=  form_for @user, url: signup_path do |f| %>



    <strong><%= f.label :username %></strong>
    <%= f.text_field :username %>
    <br />

    <strong><%= f.label :email %></strong>
    <%= f.email_field :email%>
    <br />

    <strong><%= f.label :password %></strong>
    <%= f.password_field :password %>
    <br />

    <div class="button center"><%= f.submit "Sign Up" %></div>
<% end %>

<br />
<div class="center"><button class="button"><%= link_to 'Log In with Github', '/auth/github' %></button></div>




